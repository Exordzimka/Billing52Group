<Window x:Class="Client.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="AuthWindow"  Height="220" Width="320">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center" VerticalAlignment="Top">Login</Label>
            <TextBox HorizontalAlignment="Center" VerticalAlignment="Top" Name="Login" MaxLength="20" Width="100" Height="20"></TextBox>
            <Label HorizontalAlignment="Center" VerticalAlignment="Top">Password</Label>
            <PasswordBox PasswordChar="*" MinHeight="20" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button Margin="20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Name="LoginIn" Width="100" Height="30" Click="Auth_Click">Авторизоваться</Button>
        </StackPanel>
    </Grid>
</Window>
