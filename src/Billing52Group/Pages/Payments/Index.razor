@page "/payments"
@using Microsoft.EntityFrameworkCore
@using Billing52Group.Configuration
@using Billing52Group.Models
@inject ApplicationDbContext Context
@attribute [Authorize]
@layout MainLayout
<h3>
    Payments
</h3>

<div class="row justify-content-end">
    <NavLink class="text-white" href="/contractGroup/create">
        <span class="btn btn-primary" >
            Create
        </span>
    </NavLink>
    <NavLink class="text-white" href="/contractGroup/edit">
        <span class="btn btn-primary" >
            Edit
        </span>
    </NavLink>
    <NavLink class="text-white" href="/contractGroup/delete">
        <span class="btn btn-primary" >
            Delete
        </span>
    </NavLink>
</div>

@if (payments == null)
{
    <h4>Loading...</h4>
}
else
{
    <table class="table">
        <thead>
        <tr class="table-">
            <th>
                Id
            </th>
            <th>
                Title
            </th>
            <th>
                Date
            </th>
        </tr>
        </thead>

        <tbody>
        <tr>
            @foreach (var payment in payments)
            {
                <td>
                    @payment.Id
                </td>
                <td>
                    @payment.Title
                </td>
                <td>
                    @payment.Date
                </td>
            }
        </tr>
        </tbody>
    </table>
}

@code
{
    IEnumerable<Payment> payments;

    protected override async Task OnInitializedAsync()
    {
        payments = await Context.Payment.ToListAsync();
    }
}