@page "/contracts/{ContractId:int}/account"
@using Microsoft.EntityFrameworkCore
@using Billing52Group.Configuration
@using Billing52Group.Models
@inject ApplicationDbContext Context
@attribute [Authorize]
@inject IJSRuntime JsRuntime


@if (_contractAccounts != null)
{
    <ContractComponent Id="@ContractId"></ContractComponent>
    <h1 align="center">Accounts</h1>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr align="center">
            <th>
                Year
            </th>
            <th>
                Month
            </th>
            <th>
                Summa
            </th>
        </tr>
        </thead>

        <tbody>
        @foreach (var contractAccount in _contractAccounts)
        {
            <tr>
                <td>
                    @contractAccount.Yy
                </td>
                <td>
                    @contractAccount.Mm
                </td>
                <td>
                    @contractAccount.Summa
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@code
{
    [Parameter]
    public int ContractId { get; set; }
    
    IEnumerable<ContractAccount> _contractAccounts;
    protected override async Task OnInitializedAsync()
    {
        _contractAccounts = await Context.ContractAccount.Where(contractAccount => contractAccount.ContractId == ContractId).ToListAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);
    }
}