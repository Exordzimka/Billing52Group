@page "/contract-groups"
@using Microsoft.EntityFrameworkCore
@using Billing52Group.Configuration
@using Billing52Group.Models
@inject ApplicationDbContext Context
@attribute [Authorize]
@layout MainLayout
<h3>
    Contract Groups
</h3>

<div class="row justify-content-end">
    <NavLink class="text-white" href="/contract-groups/create">
        <span class="btn btn-primary" >
            Create
        </span>
    </NavLink>
</div>

@if (contractGroups == null)
{
    <h4>Loading...</h4>
}
else
{
    <table class="table">
        <thead>
        <tr class="table-">
            <th>
                Id
            </th>
            <th>
                Title
            </th>
            <th>
                Comment
            </th>
        </tr>
        </thead>

        <tbody>
        
        @foreach (var contractGroup in contractGroups)
        {
            <tr>
                <td>
                    @contractGroup.Id
                </td>
                <td>
                    @contractGroup.Title
                </td>
                <td>
                    @contractGroup.Comment
                </td>
            </tr>
        }
        
        </tbody>
    </table>
}

@code
{
    IEnumerable<ContractGroup> contractGroups;

    protected override async Task OnInitializedAsync()
    {
        contractGroups = await Context.ContractGroup.ToListAsync();
    }
}